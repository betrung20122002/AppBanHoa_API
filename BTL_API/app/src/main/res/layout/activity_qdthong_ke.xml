<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/cam"
    tools:context=".Activity.ThongKe.QDThongKeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Thống kê theo ngày"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:fontFamily="@font/baloo2_semibold"
        />

    <Button
        android:id="@+id/nnnnn"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/orange_button"
        android:textColor="@color/cam"
        android:text="Chọn ngày" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/black" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Thống kê tổng đơn đã bán"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:fontFamily="@font/baloo2_semibold"
        />

    <Button
        android:id="@+id/okkkkkk"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/orange_button"
        android:text="Thống kê"
        android:textColor="@color/cam" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/black" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Thống kê tổng thu nhập của cửa hàng"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:fontFamily="@font/baloo2_semibold"
        />

    <Button
        android:id="@+id/thongketongthunhap"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/orange_button"
        android:text="Thống kê"
        android:textColor="@color/cam" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/black" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Thống kê thu nhập theo tháng "
        android:textColor="@color/white"
        android:textSize="25sp"
        android:fontFamily="@font/baloo2_semibold"
        />

    <Button
        android:id="@+id/theothang"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/orange_button"
        android:text="Thống kê"
        android:textColor="@color/cam" />
</LinearLayout>